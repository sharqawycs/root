---
// The Root Layout with all global rules
import '@/styles/global.css';
import SpeedInsights from '@vercel/speed-insights/astro';
import { ClientRouter } from 'astro:transitions';

// Inter font, the main font
import '@fontsource-variable/inter';
import '@fontsource-variable/inter/wght-italic.css';
import interWoff2 from '@fontsource-variable/inter/files/inter-latin-wght-normal.woff2?url';

// Lora font for Shero in the nav (Logo)
import '@fontsource/lora/latin-500-italic?display=swap';

const isProd = import.meta.env.PROD;
export interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
}

const env = import.meta.env;

let {
  title = env.PUBLIC_DEFAULT_TITLE,
  description = env.PUBLIC_DEFAULT_DESCRIPTION,
  ogImage = env.BASE_URL + env.PUBLIC_OG_IMAGE,
} = Astro.props as Props;

title += ' ' + env.PUBLIC_POSTFIX;
description += ' ' + env.PUBLIC_POSTFIX;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="preload" as="font" type="font/woff2" href={interWoff2} crossorigin="anonymous" />

    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="color-scheme" content="dark light" />

    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="author" content="sharqawycs" />
    <link rel="canonical" href={Astro.url} />

    <!-- Open Graph -->
    <meta property="og:site_name" content="sharqawycs" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:secure_url" content={ogImage} />
    <meta property="og:image:type" content="image/png" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content={title} />

    <!-- Twitter -->
    <meta name="twitter:image" content={ogImage} />
    <meta name="twitter:image:src" content={ogImage} />
    <meta name="twitter:image:alt" content={title} />
    <link rel="image_src" href={ogImage} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@sharqawycs" />
    <ClientRouter />
  </head>

  <body>
    <slot />
    {isProd && <SpeedInsights />}
  </body>
</html>
