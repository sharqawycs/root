---
import { getCollection } from 'astro:content';
import PageLayout from '@/layouts/PageLayout.astro';
import PageHeader from '@/components/layout/PageHeader.astro';
import type { Journal } from '@/types/journal';

export async function getStaticPaths() {
  const journals = await getCollection('journal');
  return journals.map((journal: Journal) => ({
    params: { slug: journal.slug },
    props: { journal },
  }));
}

type Props = {
  journal: Journal;
};

const { journal } = Astro.props;
const { Content } = await journal.render();
---

<PageLayout title={journal.data.title} description={journal.data.description || journal.data.title}>
  <article>
    <PageHeader subtitle={journal.data.description} date={journal.data.date.toLocaleDateString()}>{journal.data.title}</PageHeader>

    <Content />
  </article>
</PageLayout>
