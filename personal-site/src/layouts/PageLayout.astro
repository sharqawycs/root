---
import RootLayout from '@/layouts/RootLayout.astro';
// import Header from '@/components/layout/Header.tsx';
import NavBar from '@/components/NavBar.astro';

export interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  className?: string;
}

const { title, description, ogImage, className = '' } = Astro.props as Props;
---

<RootLayout title={title} description={description} ogImage={ogImage}>
  <!-- <Header /> -->
  <NavBar />
  <main class={`p-4 flex-1 page-animation  ${className}`}>
    <!-- Children is <slot />  -->
    <slot />
  </main>
  <!-- <Footer /> -->
</RootLayout>

<style>
  .page-animation {
    animation: blur-in 0.2s linear;
  }

  @keyframes blur-in {
    from {
      opacity: 0;
      filter: blur(2px);
    }
    to {
      opacity: 1;
      filter: blur(0);
    }
  }
</style>
