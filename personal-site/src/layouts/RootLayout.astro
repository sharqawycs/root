---
// The Root Layout with all global rules
import '@/styles/global.css';

// Inter font, the main font
import '@fontsource-variable/inter';
import '@fontsource-variable/inter/wght-italic.css';
import interWoff2 from '@fontsource-variable/inter/files/inter-latin-wght-normal.woff2?url';

// Lora font for Shero in the nav (Logo)
import '@fontsource/lora/latin-500-italic';

export interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
}

let {
  title = 'Sharqawy Personal site',
  description = 'sharqawycs - personal site of Sharqawy, CS student and builder. Projects, notes, and contact.',
  ogImage = 'https://sharq.tech/og-image.png',
} = Astro.props as Props;

title += ' - sharqawycs';
description += ' - sharqawycs';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="preload" as="font" type="font/woff2" href={interWoff2} crossorigin="anonymous" />

    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="color-scheme" content="dark light" />

    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="author" content="sharqawycs" />
    <link rel="canonical" href={Astro.url} />

    <!-- Open Graph -->
    <meta property="og:site_name" content="sharqawycs" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:secure_url" content={ogImage} />
    <meta property="og:image:type" content="image/png" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content={title} />

    <!-- Twitter -->
    <meta name="twitter:image" content={ogImage} />
    <meta name="twitter:image:src" content={ogImage} />
    <meta name="twitter:image:alt" content={title} />
    <link rel="image_src" href={ogImage} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@sharqawycs" />
  </head>

  <body><slot /> </body>
</html>
