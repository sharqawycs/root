---
import { getCollection, type CollectionEntry } from 'astro:content';
import Page from '@/components/layout/Page.astro';

export async function getStaticPaths() {
  const journals = await getCollection('journal');
  return journals.map(journal => ({
    params: { slug: journal.slug },
    props: { journal },
  }));
}

type Props = {
  journal: CollectionEntry<'journal'>;
};

const { journal } = Astro.props;
const { Content } = await journal.render();
---

<Page title={journal.data.title} description={journal.data.description || journal.data.title}>
  <article class="mx-auto max-w-3xl">
    <header class="mb-8 border-b border-gray-200 pb-4">
      <h1 class="mb-4 text-3xl font-bold">{journal.data.title}</h1>
      <div class="flex items-center gap-4 text-sm text-gray-500">
        <time>{journal.data.date.toLocaleDateString()}</time>
      </div>
    </header>
    <div class="prose prose-lg max-w-none">
      <Content />
    </div>
  </article>
</Page>
