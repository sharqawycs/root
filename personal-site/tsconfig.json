{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],

  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,

    "allowJs": true,
    "checkJs": false,

    "strict": true, // Enables all strictness checks (see below for overrides)

    "forceConsistentCasingInFileNames": true, // ‚ùó Avoid casing bugs in imports
    "noFallthroughCasesInSwitch": true, // üõë Switch fallthrough is dumb
    "noUnusedLocals": true, // üí© Kill dead code
    "noUnusedParameters": true,
    "noImplicitReturns": true, // ‚ùó Force return types
    "noPropertyAccessFromIndexSignature": true,

    /* Preact Config */
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "skipLibCheck": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "react": ["./node_modules/preact/compat/"],
      "react-dom": ["./node_modules/preact/compat/"]
    }
  }
}
